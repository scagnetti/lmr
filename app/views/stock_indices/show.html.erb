<div class="row">
	<div class="col-md-12">
		<ol class="breadcrumb">
		  <li><%= link_to 'Stock Indices', stock_indices_path %></li>
		  <li class="active">Show</li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h1>Stock Index
			<small>
				<%= link_to(edit_stock_index_path(@stock_index)) do %>
		  		<span class="glyphicon glyphicon-edit"></span>
				<% end %>
			</small>
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-md-1">
		<h2><small>Name:</small></h2>
	</div>
	<div class="col-md-3">
		<h2><small><%= @stock_index.name %></small></h2>
	</div>
</div>

<div class="row">
	<div class="col-md-1">
		<h2><small>ISIN:</small></h2>
	</div>
	<div class="col-md-3">
		<h2><small><%= @stock_index.isin %></small></h2>
	</div>
</div>

<div class="row">
	<div class="col-md-4">

			<h3>Trend</h3>

			<table class="table table-bordered table-hover">
			  <tr>
			  	<th>Date</th>
			  	<th>Average</th>
			  </tr>
				<% @avgs.each do |k,v| %>
					<tr>
						<td><%= l(k) %></td>
						<td><%= v %></td>
					<tr>
				<% end %>	
			</table>

	</div>
</div>



