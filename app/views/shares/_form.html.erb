<% if @share.errors.any? %>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		  <div class="alert alert-danger alert-dismissable">
		  	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		  	<strong><%= pluralize(@share.errors.count, "error") %> prohibited this index from being saved:</strong>
		  	<ul>
	      	<% @share.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      	<% end %>
	      </ul>
		  </div>
		</div>
	</div>
<% end %>

<div class="row">
	<div class="col-md-4">
		<%= form_for(@share) do |f| %>
		  <div class="form-group">
		    <%= f.label :isin %>
		    <%= f.text_field :isin, :class => "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :name %>
		    <%= f.text_field :name, :class => "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :size %>
		    <%= f.select :size, options_for_select([['Large Cap', CompanySize::LARGE], ['Mid Cap', CompanySize::MID], ['Small Cap', CompanySize::SMALL]]), {}, :class => "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label(I18n.t(:index)) %>
		    <%= f.select :stock_index_id, StockIndex.all.collect {|si| [ si.name, si.id ] }, {}, :class => "form-control" %>
		    
		  </div>
		  <div class="form-group">
		    <%= f.label :financial %>
		    <%= f.check_box :financial, :class => "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :currency %>
		    <%= f.select :currency, options_for_select([['USD', Currency::USD], ['EUR', Currency::EUR]]), {}, :class => "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :stock_exchange %>
		    <%= f.select :stock_exchange, options_for_select(StockExchange::ALL), {}, :class => "form-control" %>
		  </div>
			<%= f.submit :class => "btn btn-default"%>
		<% end %>
	</div>
</div>
