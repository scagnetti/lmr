<% if @stock_index.errors.any? %>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		  <div class="alert alert-danger alert-dismissable">
		  	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		  	<strong><%= pluralize(@stock_index.errors.count, "error") %> prohibited this index from being saved:</strong>
		  	<ul>
	      	<% @stock_index.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      	<% end %>
	      </ul>
		  </div>
		</div>
	</div>
<% end %>

<div class="row">
	<div class="col-md-4">
		<%= form_for(@stock_index) do |f| %>
		  <div class="form-group">
		    <%= f.label :isin %>
		    <%= f.text_field :isin, :class => "form-control" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :name %>
		    <%= f.text_field :name, :class => "form-control" %>
		  </div>
		  <%= f.submit :class => "btn btn-default" %>
		<% end %>
	</div>
</div>