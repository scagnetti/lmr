<div class="row">
	<%= render 'score', :score => @score_card.reaction.score %>
	<div class="col-md-3">
		Reaktion auf Quartalszahlen
		<span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="positiv | zwischen -1% und +1% | negativ"></span>
	</div>
	<% if @score_card.reaction.succeeded %>
		<div class="col-md-2">
			Share-Perf: <%= @score_card.reaction.share_perf %>
		</div>
	 <div class="col-md-2">
			Index-Perf: <%= @score_card.reaction.index_perf %>
		</div>
		<div class="col-md-2">
			<button class="btn btn-default btn-xs" data-toggle="modal" data-target="#reaction">
  			Show
			</button>
		</div>
	<% else %>
		<%= render 'failed' %>
	<% end %>
</div>

<div class="modal fade" id="reaction" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title" id="reactionLabel">Reaction on publication (<%= @score_card.reaction.release_date %>)</h4>
      </div>
      <div class="modal-body">
        <table class="table table-bordered">
			    <colgroup>
			      <col width="60">
		        <col width="60">
		        <col width="60">
		      </colgroup>
					<tr>
						<th></th>
						<th>Share</th>
						<th>Index</th>
					</tr>
					<tr>
						<td>Opening</td>
						<td><%= @score_card.reaction.price_opening %></td>
						<td><%= @score_card.reaction.index_opening %></td>
					</tr>
					<tr>
						<td>Closing</td>
						<td><%= @score_card.reaction.price_closing %></td>
						<td><%= @score_card.reaction.index_closing %></td>
					</tr>
					<tr>
						<td>Perf</td>
						<td><%= @score_card.reaction.share_perf %></td>
						<td><%= @score_card.reaction.index_perf %></td>
					</tr>
				</table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->