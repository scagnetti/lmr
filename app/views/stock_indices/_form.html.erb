<% if @stock_index.errors.any? %>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		  <div class="alert alert-danger alert-dismissable">
		  	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		  	<strong><%= pluralize(@stock_index.errors.count, "error") %> prohibited this index from being saved:</strong>
		  	<ul>
	      	<% @stock_index.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      	<% end %>
	      </ul>
		  </div>
		</div>
	</div>
<% end %>

